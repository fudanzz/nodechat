extends layout
block content
    h1 Hello from rooms and yeah!!
    a.btn.btn-primary(href="/rooms/add") create new chat room
    table.table.table-striped
        thead
            tr
                th
                th Name
                th
                th Id
        tbody
            each room in rooms
                tr
                    td(style="width: 50px;"): a(href="/rooms/delete/#{room.id}")
                        span.glyphicon.glyphicon-remove
                    td= room.name
                    td(style="width: 50px;"): a(href="/rooms/edit/#{room.id}")
                        span.glyphicon.glyphicon-pencil
                    td= room.id
